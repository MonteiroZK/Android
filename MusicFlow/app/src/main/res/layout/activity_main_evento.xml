<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityEvento">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gerenciar Eventos"></TextView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome"></TextView>
            <EditText
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:hint="text"
                android:id="@+id/edtNome"
                android:inputType="textPersonName"></EditText>


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data"></TextView>

            <DatePicker
                android:id="@+id/Datapik"
                style="@android:style/Widget.DatePicker"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layerType="none"></DatePicker>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"></TextView>
            <Spinner
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerStatus"></Spinner>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cache"></TextView>
            <EditText
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:hint="text"
                android:id="@+id/edtCache"
                android:inputType="number"></EditText>


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instrumental"></TextView>

           <Spinner
               android:layout_width="290dp"
               android:layout_height="wrap_content"
               android:id="@+id/spinnerRepositorio"

               >

           </Spinner>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar"
                android:onClick="clickRegistrar"

                android:textAllCaps="false"></Button>
            <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listar"
            android:onClick="clickListar"
            android:textAllCaps="false"></Button>



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>